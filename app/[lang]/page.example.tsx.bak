import { notFound } from 'next/navigation';
import { getDictionary } from '@/lib/i18n/dictionaries';
import type { PageProps } from '@/.next/types/app/[lang]/page';

// Este archivo es un ejemplo de cómo implementar una Landing Page
// con internacionalización según Next.js 16

export default async function HomePage({ params }: PageProps) {
  // 1. Obtener el locale de los params
  const { lang } = await params;
  
  // 2. Validar que el locale sea soportado
  const validLocales = ['en', 'es'];
  if (!validLocales.includes(lang)) {
    notFound();
  }
  
  // 3. Cargar el diccionario correspondiente
  const dict = await getDictionary(lang as 'en' | 'es');
  
  // 4. Renderizar con traducciones
  return (
    <div className="min-h-screen">
      <header className="py-6 px-4">
        <nav className="container mx-auto flex items-center justify-between">
          <h1 className="text-2xl font-bold">{dict.landing.title}</h1>
          <div className="flex gap-4">
            <a href={`/${lang}/auth/signin`} className="px-4 py-2 rounded-md border">
              {dict.landing.logIn}
            </a>
            <a href={`/${lang}/auth/signup`} className="px-4 py-2 rounded-md bg-blue-600 text-white">
              {dict.landing.getStarted}
            </a>
          </div>
        </nav>
      </header>

      <main className="container mx-auto px-4 py-20">
        <section className="text-center max-w-3xl mx-auto">
          <h2 className="text-5xl font-bold mb-6">
            {dict.landing.title}
          </h2>
          <p className="text-xl text-gray-600 mb-8">
            {dict.landing.subtitle}
          </p>
          <button className="px-8 py-4 bg-blue-600 text-white rounded-lg text-lg font-semibold">
            {dict.landing.getStarted}
          </button>
        </section>

        <section className="mt-20 grid md:grid-cols-3 gap-8">
          <div className="p-6 border rounded-lg">
            <h3 className="text-xl font-bold mb-3">{dict.landing.employeePortal}</h3>
            <p className="text-gray-600">{dict.landing.employeePortalDesc}</p>
          </div>
          {/* Agregar más features */}
        </section>
      </main>

      <footer className="py-8 px-4 bg-gray-100 mt-20">
        <div className="container mx-auto text-center text-gray-600">
          <p>© 2025 Ascencio Tax Services. All rights reserved.</p>
        </div>
      </footer>
    </div>
  );
}

// Generar rutas estáticas para SEO
export async function generateStaticParams() {
  return [
    { lang: 'en' },
    { lang: 'es' },
  ];
}

// Metadata dinámica según locale
export async function generateMetadata({ params }: PageProps) {
  const { lang } = await params;
  const dict = await getDictionary(lang as 'en' | 'es');
  
  return {
    title: dict.landing.title,
    description: dict.landing.subtitle,
  };
}
